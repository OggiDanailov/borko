<!DOCTYPE html>
<html>
  <head>
    <title>Borko</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class='navbar'>
      <ul>
          <li><%= link_to 'Home', root_path %></li>

        <% if !user_signed_in? && !admin_signed_in? %>
           <li><a href='#'>Articles</a>
              <ul>
                <li><a href="#">Античност</a></li>
                <li><a href="#">Средновековие</a></li>
                <li><a href="#">Ренесанс</a></li>
                <li><a href="#">Ново Време</a></li>
                <li><a href="#">Модернизъм</a></li>
              </ul>
          </li>
          <li><%= link_to "Sign In", new_user_session_path %></li>
          <li><%= link_to "Sign Up", new_user_registration_path %></li>
          <li><%= link_to "Sign Out", destroy_user_session_path, method: 'delete' %></li>
        <% end %>


        <% if admin_signed_in? %>
          <li><%= link_to "Admin",new_admin_session_path %></li>
          <li><%= link_to "New Article", new_article_path %></li>
          <li><%= link_to "Admin sign out", destroy_admin_session_path, method: 'delete' %></li>
        <% end %>


      </ul>
    </nav>


	     <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
